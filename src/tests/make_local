#CC = gcc
CC = g++

COPT = -g -O2 -Wall #-std=c99

INCLUDE = -I. -I../core/system/ -I../core/structures/

LD = gcc

OBJ = ../core/system/topology.o ../core/structures/graph.o

all: readflow.x #$(OBJ) generategraph.x

CFLAGS  = $(COPT) $(INCLUDE)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

%.x: %.o
	$(LD) $(OBJ) $< -o $@

rm:
	rm $(OBJ)
	rm *.x
