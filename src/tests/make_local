#CC = gcc
CC = g++

COPT = -g -O2 -Wall #-std=c99

MPICH2_PATH=/usr/local/mpich2

INCLUDE = -I. -I$(MPICH2_PATH)/include -I../core/system/ -I../core/structures/ -I../core/utils -I../engine/

LD = g++

LIBS    = -L$(MPICH2_PATH)/lib -l mpi

STRUCTURES = ../core/structures
TRANSPORT = ../engine/transport

OBJ = ../core/utils/util.o ../core/structures/flow.o $(TRANSPORT)/pami/transport_pami.o $(TRANSPORT)/gni/transport_gni.o $(TRANSPORT)/transport.o ../engine/virtuallane.o #../core/system/topology.o ../core/structures/graph.o

all: $(OBJ) readflow.x #$(OBJ) generategraph.x

CFLAGS  = $(COPT) $(INCLUDE)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

%.x: %.o
	$(LD) $(OBJ) $< $(LIBS) -o $@

rm:
	rm $(OBJ)
	rm *.x
